  <div class='container'>
    <div class="row">
      <div class='col s6 offset-s3 z-depth-3' style="margin-top: 30px">
      <h3 class="red-text darken-3 center-align">SIGN UP</h3>
        <%= form_for :user, url: { action: 'create'} do |f| %>
          <%= render 'error' %>
          <div class="row">
            <div class="input-field col s6">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: 'validate' %>
            </div>
            <div class="input-field col s6">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'validate' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'validate', placeholder: '' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'validate', placeholder: '' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'validate' %>
            </div>
          </div>

          <div class="row">
            <div class="col s12">
              <%= f.submit 'Sign Up', class: 'btn red darken-3' %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  </div>